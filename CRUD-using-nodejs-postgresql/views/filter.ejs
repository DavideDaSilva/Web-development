<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CRUD demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  </head>
  <body>

    <div class="display-todos container my-5">
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <% if(data.length>0){ %>
                <% for(let i=0; i<data.length; i++){ %>
            <div class="col">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%=data[i].date %></h5>
                  <p class="card-text"><%=data[i].todo %></p>

                  <button class="btn btn-danger m-1"><i class="material-icons">delete</i></button>
                  <button class="btn btn-primary m-1"><i class="material-icons">border_color</i></button>
                </div>
              </div>
            </div>
            <%}%>
            <%}%>
          </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>